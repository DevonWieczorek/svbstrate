{
  "name": "svbstrate",
  "version": "1.0.0",
  "description": "A simple, scalable SCSS base layer.",
  "repository": {
    "type": "git",
    "url": "https://github.com/estrattonbailey/svbstrate.git"
  },
  "scripts": {
    "patch": "npm version patch && npm run pub",
    "pub": "npm publish",
    "build": "npm run css ; npm run css:min",
    "css": "node-sass src/main.scss dist/svbstrate.css",
    "css:min": "node-sass src/main.scss | postcss -u cssnano > dist/svbstrate.min.css"
  },
  "bin": {
    "svbstrate": "build.js"
  },
  "keywords": [
    "css",
    "atomic css",
    "functional css",
    "scss",
    "ocss",
    "sass",
    "toolkit",
    "grid",
    "framework",
    "grid"
  ],
  "author": "estrattonbailey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/estrattonbailey/svbstrate/issues"
  },
  "homepage": "http://estrattonbailey.com/svbstrate-site/",
  "dependencies": {},
  "devDependencies": {
    "cssnano": "^3.7.4",
    "fs-extra": "^0.30.0",
    "node-sass": "^3.8.0",
    "postcss-cli": "^2.5.2"
  }
}
